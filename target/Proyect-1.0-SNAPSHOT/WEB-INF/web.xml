<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    
    <welcome-file-list>
        <welcome-file>/views/index.jsp</welcome-file>
    </welcome-file-list>


    <filter>
        <filter-name>FilterAppAdmin</filter-name>
        <filter-class>com.Controller.Filters.FilterAppAdmin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterAppAdmin</filter-name>
        <url-pattern>com.Controller.Servlet.LogoutServlet</url-pattern>
        <url-pattern>com.Controller.Servlet.ServletAdmin</url-pattern>

    </filter-mapping>
    <filter>
        <filter-name>FilterAppEmployee</filter-name>
        <filter-class>com.Controller.Filters.FilterAppEmployee</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>FilterAppEmployee</filter-name>
        <url-pattern>com.Controller.Servlet.EmployeesServlet</url-pattern>
        <url-pattern>com.Controller.Servlet.LogoutServlet</url-pattern>
    </filter-mapping>


</web-app>